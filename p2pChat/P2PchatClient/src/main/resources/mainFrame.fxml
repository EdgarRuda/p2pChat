<BorderPane fx:id="mainPane" prefHeight="500.0" prefWidth="700.0" stylesheets="styles.css, noFocus.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.client.mainFrameController.MainFrameController">
   <center>
      <AnchorPane fx:id="mainView" style="-fx-background-color: #f2ebeb;">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="132.0" layoutY="207.0" prefHeight="87.0" prefWidth="236.0" style="-fx-text-fill: black;" text="select user to open a chat, or add one" textAlignment="CENTER" textOverrun="CLIP" wrapText="true">
               <font>
                  <Font name="System Bold" size="19.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </center>
   <left>
      <AnchorPane prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane id="scrollableLeftPane" prefHeight="500.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
              <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="200.0" prefWidth="200.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="60.0" prefHeight="60.0" vgrow="NEVER" />
                <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="NEVER" />
                <RowConstraints minHeight="400.0" prefHeight="400.0" vgrow="ALWAYS" />
              </rowConstraints>
               <children>
                  <ScrollPane fx:id="scrollableLeftPane" id="scrollableLeftPane" hbarPolicy="NEVER" vbarPolicy="NEVER" GridPane.rowIndex="2">
                     <content>
                        <StackPane id="scrollableLeftPane">
                           <children>
                              <VBox fx:id="contactListBox" alignment="TOP_CENTER"  />
                              <VBox fx:id="searchResultBox" alignment="TOP_CENTER"  />
                              <Pane focusTraversable="true" mouseTransparent="true" prefHeight="200.0" prefWidth="200.0">
                                 <children>
                                    <Label fx:id="searchResultNotification" alignment="CENTER" contentDisplay="CENTER" prefHeight="70.0" prefWidth="200.0" text="start typing to see results.." />
                                 </children>
                              </Pane>
                           </children>
                        </StackPane>
                     </content>
                  </ScrollPane>
                  <Pane fx:id="userInfoBox">
                     <children>
                        <Button layoutX="135.0" layoutY="18.0" mnemonicParsing="false" onAction="#logout" text="logout" />
                        <Label fx:id="userName" layoutX="38.0" layoutY="22.0" text="username" />
                     </children>
                  </Pane>
                  <GridPane fx:id="searchBox" GridPane.rowIndex="1">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="138.0" />
                    </columnConstraints>
                     <children>
                        <TextField fx:id="searchBar" maxWidth="182.0" prefHeight="25.0" prefWidth="182.0">
                           <GridPane.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </GridPane.margin>
                        </TextField>
                     </children>
                     <rowConstraints>
                        <RowConstraints />
                     </rowConstraints>
                  </GridPane>
               </children>
            </GridPane>
         </children>
      </AnchorPane>
   </left>
</BorderPane>
